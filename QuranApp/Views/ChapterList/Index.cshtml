@model IEnumerable<QuranApp.Models.Chapter>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Chapter List</h2>
        </div>
    </div>
    <br /> 
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Chapter Id
                    </th>
                    <th>
                        Chapter Name
                    </th>
                    <th>
                        Chapter Place
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var chapter in Model)
                {
                <tr>
                    <td width="30%">@chapter.id</td>
                    <td width="30%">@chapter.name</td>
                    <td width="30%">@chapter.place</td>
                    <td width="10%"><a asp-controller="ChapterList" asp-action="OpenChapter" asp-route-id="@chapter.id" class="btn btn-primary">Open</a></td>
                </tr>
                }
            </tbody>
        </table>
            }
            else
            {
                  <p>No Data to Show Please check your internet connection</p>
            }
</div>

